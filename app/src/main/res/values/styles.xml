<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/iransans</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorLight</item>
        <item name="android:navigationBarColor" tools:targetApi="M">@color/colorPrimaryDark</item>
    </style>

    <!--Style for Splash Screen-->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorWhite</item>
<!--        <item name="android:windowFullscreen">true</item>-->

    </style>

    <style name="primaryButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="color">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/colorPrimary</item>
    </style>

</resources>
